<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.galaxywizard" name="[COLOR aqua]Galaxy Wizard[/COLOR]" version="1.0.3" provider-name="TWMF">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR aqua]Galaxy Wizard[/COLOR]</summary>
        <description lang="en">[COLOR aqua]Galaxy Wizard[/COLOR] allows the installation of Galaxy Build.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/mrbr1ghts1d3/plugin.program.galaxywizard</source>
        <news>
1.0.3
- Added Icon
1.0.2
- Added source for Galaxy Build
1.0.1
- Removed OpenWizard Branding
1.0.0
- Initial Build (Based on OpenWizard)
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

    <addon id="rainbow.to.the.stars" name="Galaxy Repo" version="1.0.0" provider-name="Ruler Of The Cosmos">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Galaxy Repo">
            <info compressed="false">https://raw.githubusercontent.com/mrbr1ghts1d3/GalaxyRepo/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/mrbr1ghts1d3/GalaxyRepo/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/mrbr1ghts1d3/GalaxyRepo/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>If you know, you know.</summary>
            <description>If you know, you know.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
